{
   "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "baseUrl": ".",
      "paths": {
         "@assets/*": ["assets/*"],
         "@components/*": ["components/*"],
         "@config/*": ["config/*"],
         "@constant/*": ["constant/*"],
         "@contexts/*": ["contexts/*"],
         "@hooks/*": ["hooks/*"],
         "@lib/*": ["lib/*"],
         "@styles/*": ["styles/*"],
         "@utils/*": ["utils/*"]
      }
   },

   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts",
      "./index.d.ts"
   ],
   "exclude": ["node_modules"]
}
